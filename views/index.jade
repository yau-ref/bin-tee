extends layout

block content
  div#quotes
    div(ng-repeat="quote in quotes | orderBy: 'id'" id="q{{quote.id}}").quote
      p.text {{quote.text}}
      div.controls
      a(href="#" onclick="voteUp({id}); return false;").voteUp +
      span(id="r{{quote.id}}").rating {{quote.rating}}
      a(href="#" onclick="voteDown({{quote.id}}); return false;").voteDown +
      a(href="#" onclick="openComments({{quote.id}}); return false").quote-comments-button.fa.fa-comments-o     
      p.info
        span.quote_date {{quote.date}}
        a(href="/q{{quote.id}}").quote_id \#{{quote.id}}
        div(id="quote-comments-{{quote.id}}").comments.hidden
